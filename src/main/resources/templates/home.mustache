      <section id="manage-profile" class="py-4">
        <div class="container">
          <h2>Manage Profile</h2>

          <!-- Change Password Form -->
          <h3>Change Password</h3>
          <form id="change-password"  name = "change-password" action = "/change-password" method="post">
            <div class="form-group">
              <label for="oldPassword">Enter Old Password:</label>
              <input
                type="password"
                class="form-control"
                id="oldPassword"
                name="oldPassword"
                required
              />
            </div>
            <div class="form-group">
              <label for="newPassword">Enter New Password:</label>
              <input
                type="password"
                class="form-control"
                id="newPassword"
                name="newPassword"
                required
              />
            </div>
            <button type="submit" class="btn btn-primary">
              Change Password
            </button>
            {{#error}}
            <div class="error-message">
               <p>{{error}}</p>
            </div>
            {{/error}}
          </form>

          <h3>Change Payment Method</h3>
          <form id="changePaymentMethodForm" action="/change-payment" method="post" role="form">
            <div class="form-group">
              <label for="paymentMethod">Select Payment Method:</label>
              <select
                class="form-control"
                id="paymentMethod"
                name="paymentMethod"
                required
              >
                <option value="">Select Payment Method</option>
                <option value="cash" name="cash" id="cash">Cash</option>
                <option value="creditCard" name="Credit Card" id="Credit Card" >Credit Card</option>
                <option value="crypto" name="Cyrpto" id="Crypto" >Crypto</option>
              </select>
            </div>
            <button type="submit" class="btn btn-primary">
              Change Payment Method
            </button>
          </form>
        </div>
